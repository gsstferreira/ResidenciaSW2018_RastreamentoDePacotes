@using AplicacaoArduino.ViewModels
@model ListContainerPacote

<div>
    <br />
    <br />
    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table-bordered table">
                <thead>
                    <tr>
                        <th>
                            ID pacote
                        </th>
                        <th>
                            Destinatário
                        </th>
                        <th>
                            Data de postagem
                        </th>
                        <th>
                            Rotas
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.pacotes)
                    {
                        <tr>
                            <td>
                                @item.PacoteId
                            </td>
                            <td>
                                @item.Destinatario
                            </td>
                            <td>
                                @item.DataPostagem
                            </td>
                            <td>
                                <a href="@Url.Action("Rotas","Home",new { PacoteId = item.PacoteId })">Ver rotas</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
