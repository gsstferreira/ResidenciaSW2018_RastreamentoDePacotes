@using AplicacaoArduino.ViewModels
@model ListContainerRota

<div>
    <br />
    <br />
    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table-bordered table">
                <thead>
                    <tr>
                        <th>
                            ID rota
                        </th>
                        <th>
                            Data Início
                        </th>
                        <th>
                            Rastreamento
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.rotas)
                    {
                        <tr>
                            <td>
                                @item.RotaId
                            </td>
                            <td>
                                @item.DataInicio
                            </td>
                            <td>
                                <a href="@Url.Action("Localizacoes","Home",new { RotaId = item.RotaId })">Ver pontos de leitura</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
